@model List<UserDataViewModel>
@{
	ViewData["Title"] = "Index";
}

@*-------------------------- Test Layout---------------------------*@
<div class="content-wrapper">
	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="card">
			<div class="card-header d-flex justify-content-between">
				<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">List/</span> Users</h4>
				<h5>
					<a class="float-end d-inline" asp-action="AddUser">
						<button id="addRow" class="btn btn-dark"><i class="bi bi-person-plus"></i> Add User</button>
					</a>
				</h5>
			</div>
			<div class="table-responsive text-nowrap">
				<table class="table table-dark">
					<thead>
						<tr>
							<th>Full Name</th>
							<th>Email</th>
							<th>Group Name</th>
							<th>Action</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody class="table-border-bottom-0">
						@foreach (var item in Model)
						{
							<tr>
								<td><strong>@item.Name</strong></td>
								<td>@item.Email</td>
								<td>@item.GroupName</td>
								<td><a class="badge bg-label-warning me-1" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a></td>
								<td><a class="badge bg-label-danger me-1" asp-action="Delete" asp-route-id="@item.Id" onclick="confirmDelete()"><i class="bi bi-trash3"></i> Delete</a></td>
							
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<!--/ Bootstrap Dark Table -->
@section Scripts{
	<script>
		function confirmDelete() {
			var confirmMsg = confirm("Are you sure you want to Delete this User?!");
			if (!confirmMsg) {
				event.preventDefault();
			}

		}
	</script>
}

@model HrProject.Models.Department

@{
	ViewData["Title"] = "Details";
}

<div class="container">
	<h4 class="fw-bold py-3 ps-4 pt-4"><span class="text-muted fw-light">Details/</span> Employee</h4>
	<hr />
	<div class="table-responsive">
		<table class="table table-bordered">
			<tbody>
				
				<tr>
					<th>Department Name</th>
					<td>@Html.DisplayFor(model => model.DeptName)</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="float-end demo-inline-spacing pb-2 pt-2">
		<div class="btn-group">
			<a class="btn btn-outline-danger me-3" asp-action="Edit" asp-route-id="@Model?.Id">
				<i class="bi bi-pencil-square"></i>Edit
			</a>
			<a asp-action="Index" class="btn btn-success me-3">
				<i class="bi bi-arrow-return-left"></i>Back to List
			</a>
		</div>
	</div>
</div>

@section Scripts {
	<script src="/lib/jquery/dist/jquery.min.js"></script>
	<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<style>
	div {
		color: black;
	}
</style>





















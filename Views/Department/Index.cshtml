@model IEnumerable<HrProject.Models.Department>

@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Form/</span> Departments</h4>
	<hr />
    <h5 class="mb-4">
        <a class="float-end d-inline" asp-action="Create">
            <button id="addRow" class="btn btn-dark mb-4"><i class="bi bi-building-fill"></i> Add Department</button>
        </a>
    </h5>

	<table id="departments" class="table table-striped table-bordered dt-responsive nowrap" style="color: black; margin-top: 15px">
		<thead>
			<tr class="fw-bold">
				<th>Department Name</th>
				<th class="text-center">Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.DeptName</td>
					<td class="text-center">
                        <a class="badge bg-label-success me-1" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="badge bg-label-primary me-1" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                        <a class="badge bg-label-danger me-1" asp-action="Delete" asp-route-id="@item.Id" onclick="confirmDelete()"><i class="bi bi-trash"> Delete</i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<br />
	<br />
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

@section Scripts{
	<script>
		function confirmDelete() {
			var confirmMsg = confirm("Are you sure you want to Delete this Deoartment?!");
			if (!confirmMsg) {
				event.preventDefault();
			}

		}
	</script>

	<script src="~/lib/datatables/js/jquery.dataTables.js"></script>
	<script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>

}




@model HrProject.ViewModels.createArriveAttendenceViewModel

@{
    ViewData["Title"] = "Arrive";
    SelectList emps = new SelectList(Model.employees, "Id", "FirstName");
    Layout = "_Layout";
}

<h1>Arrive</h1>

<h4>Employee @Model.Employee?.FirstName Arrive now</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="createArrive">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Emp_Id" class="control-label"></label>
                <select asp-for="Emp_Id" class="form-control" asp-items="emps"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Arrive" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@model HrProject.ViewModels.PermissionFormViewModel

@{
	ViewData["Title"] = "AddGroup";
}
<div class="content-wrapper">
	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="col-xxl">
			<div class="card">
				<div class="card-header">
					<div class="card-title-wrap">
						<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Add New Group</h4>
					</div>
				</div>
				<div class="card-body">

					<form asp-action="AddGroup">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div class="row mb-3">
							<div class="col-sm-10">
								<label class="col-sm-2 form-label" for="basic-icon-default-phone"><strong>Group Name</strong></label>
								<div class="input-group input-group-merge">
									<span id="basic-icon-default-fullname2" class="input-group-text">
										<i class="bx bx-building"></i>
									</span>
									<input asp-for="RoleName" type="text"
										   class="form-control"
										   id="basic-icon-default-fullname"
										   placeholder="Enter Group Name..."
										   aria-describedby="basic-icon-default-fullname2" />
								</div>
								<input asp-for="RoleId" type="hidden" />
								<span asp-validation-for="RoleName" class="text-danger"></span>
							</div>
						</div>


						@*<div class="form-group">
						<label>Group Name</label>
						<input asp-for="RoleName" class="form-control" />
						<input asp-for="RoleId" type="hidden" />
						<span asp-validation-for="RoleName" class="text-danger"></span>
						</div>*@

						<table class="table table-striped mt-3">
							<thead>
								<tr>
									<th><strong> Module Name </strong></th>
									<th><strong> Add </strong></th>
									<th><strong> View </strong></th>
									<th><strong> Edit </strong></th>
									<th><strong></strong> Delete</th>
								</tr>
							</thead>
							<tbody class="table-border-bottom-0">
								<tr>
									<td><strong>Employee</strong></td>
									@for (int i = 0; i < 4; i++)
									{
										<input type="hidden" asp-for="@Model.RoleClaims[i].DisplayValue" />
										<td>
											<input type="checkbox" asp-for="@Model.RoleClaims[i].IsSeleced" class="form-check-input" />
										</td>
									}
								</tr>
								<tr>
									<td><strong>General Setting</strong></td>
									@for (int i = 4; i < 8; i++)
									{
										<input type="hidden" asp-for="@Model.RoleClaims[i].DisplayValue" />
										<td>
											<input type="checkbox" asp-for="@Model.RoleClaims[i].IsSeleced" class="form-check-input" />
										</td>
									}
								</tr>
								<tr>
									<td><strong>Department</strong></td>
									@for (int i = 8; i < 12; i++)
									{
										<input type="hidden" asp-for="@Model.RoleClaims[i].DisplayValue" />
										<td>
											<input type="checkbox" asp-for="@Model.RoleClaims[i].IsSeleced" class="form-check-input" />
										</td>
									}
								</tr>
								<tr>
									<td><strong>Salary</strong></td>
									@for (int i = 12; i < 16; i++)
									{
										<input type="hidden" asp-for="@Model.RoleClaims[i].DisplayValue" />
										<td>
											<input type="checkbox" asp-for="@Model.RoleClaims[i].IsSeleced" class="form-check-input" />
										</td>
									}
								</tr>
								<tr>
									<td><strong>Attendance</strong></td>
									@for (int i = 16; i < 20; i++)
									{
										<input type="hidden" asp-for="@Model.RoleClaims[i].DisplayValue" />
										<td>
											<input type="checkbox" asp-for="@Model.RoleClaims[i].IsSeleced" class="form-check-input" />
										</td>
									}
								</tr>
								<tr>
									<td><strong>Permission</strong></td>
									@for (int i = 20; i < 24; i++)
									{
										<input type="hidden" asp-for="@Model.RoleClaims[i].DisplayValue" />
										<td>
											<input type="checkbox" asp-for="@Model.RoleClaims[i].IsSeleced" class="form-check-input" />
										</td>
									}
								</tr>
							</tbody>
						</table>

						<div class="float-end demo-inline-spacing">
							<div class="btn-group">
								<button type="submit" value="Create" class="btn btn-primary me-3">Create</button>
								<a class="btn btn-outline-danger" asp-action="Index"> <i class="bi bi-x-circle"></i> Cancel</a>
							</div>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
